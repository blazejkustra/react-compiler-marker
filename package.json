{
  "name": "react-compiler-marker",
  "displayName": "React Compiler Marker ✨",
  "description": "Highlights components optimized by the React Compiler, providing ✨ visual cues ✨  to make the optimization process more transparent during development.",
  "version": "1.2.0",
  "author": "Błażej Kustra <kustrablazej@gmail.com>",
  "publisher": "blazejkustra",
  "license": "MIT",
  "keywords": [
    "react",
    "react-compiler",
    "react-components",
    "vscode-extension",
    "optimization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejkustra/react-compiler-marker"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "icon": "images/logo.png",
  "contributes": {
    "commands": [
      {
        "command": "react-compiler-marker.activate",
        "title": "Activate Extension",
        "category": "React Compiler Marker ✨"
      },
      {
        "command": "react-compiler-marker.deactivate",
        "title": "Deactivate Extension",
        "category": "React Compiler Marker ✨"
      },
      {
        "command": "react-compiler-marker.checkOnce",
        "title": "Check in the current file",
        "category": "React Compiler Marker ✨"
      },
      {
        "command": "react-compiler-marker.previewCompiled",
        "title": "Preview Compiled Output",
        "category": "React Compiler Marker ✨"
      },
      {
        "command": "react-compiler-marker.showReport",
        "title": "Scan Workspace",
        "category": "React Compiler Marker ✨"
      },
      {
        "command": "react-compiler-marker.showProblems",
        "title": "Show Problems Panel",
        "category": "React Compiler Marker ✨"
      },
      {
        "command": "react-compiler-marker.clearProblems",
        "title": "Clear Problems",
        "category": "React Compiler Marker ✨"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "react-compiler-marker.statusBarClick",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "React Compiler Marker",
      "properties": {
        "reactCompilerMarker.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the React Compiler status bar indicator"
        },
        "reactCompilerMarker.statusBarClickAction": {
          "type": "string",
          "default": "report",
          "enum": ["report", "problems", "both"],
          "enumDescriptions": [
            "Open detailed HTML report",
            "Show in Problems panel",
            "Show both report and problems"
          ],
          "description": "Action to perform when clicking the status bar item"
        },
        "reactCompilerMarker.ignorePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/.next/**",
            "**/out/**",
            "**/*.test.{ts,tsx,js,jsx}",
            "**/*.spec.{ts,tsx,js,jsx}",
            "**/__tests__/**",
            "**/*.d.ts"
          ],
          "description": "File patterns to ignore when scanning for unoptimized components",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "npx ovsx publish -p"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.6",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/react": "^19.1.11",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/parser": "^7.26.2",
    "@babel/preset-typescript": "^7.26.0",
    "babel-plugin-react-compiler": "1.0.0"
  }
}
