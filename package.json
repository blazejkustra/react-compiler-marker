{
  "name": "react-compiler-marker",
  "displayName": "React Compiler Marker âœ¨",
  "description": "Highlights components optimized by the React Compiler, providing âœ¨ visual cues âœ¨  to make the optimization process more transparent during development.",
  "version": "1.3.3",
  "author": "BÅ‚aÅ¼ej Kustra <kustrablazej@gmail.com>",
  "publisher": "blazejkustra",
  "license": "MIT",
  "keywords": [
    "react",
    "react-compiler",
    "react-components",
    "vscode-extension",
    "optimization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejkustra/react-compiler-marker"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "icon": "images/logo.png",
  "contributes": {
    "commands": [
      {
        "command": "react-compiler-marker.activate",
        "title": "Activate Extension",
        "category": "React Compiler Marker âœ¨"
      },
      {
        "command": "react-compiler-marker.deactivate",
        "title": "Deactivate Extension",
        "category": "React Compiler Marker âœ¨"
      },
      {
        "command": "react-compiler-marker.checkOnce",
        "title": "Check in the current file",
        "category": "React Compiler Marker âœ¨"
      },
      {
        "command": "react-compiler-marker.previewCompiled",
        "title": "Preview Compiled Output",
        "category": "React Compiler Marker âœ¨"
      }
    ],
    "configuration": {
      "title": "React Compiler Marker",
      "properties": {
        "reactCompilerMarker.babelPluginPath": {
          "type": "string",
          "default": "node_modules/babel-plugin-react-compiler",
          "description": "Path to the babel-plugin-react-compiler in your project. By default it's 'node_modules/babel-plugin-react-compiler'"
        },
        "reactCompilerMarker.errorEmoji": {
          "type": "string",
          "nullable": true,
          "default": "ðŸš«",
          "description": "Emoji to display next to components that failed to be memoized"
        },
        "reactCompilerMarker.successEmoji": {
          "type": "string",
          "nullable": true,
          "default": "âœ¨",
          "description": "Emoji to display next to components that were successfully memoized"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "npx ovsx publish -p"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.6",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/react": "^19.1.11",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/parser": "^7.26.2",
    "@babel/preset-typescript": "^7.26.0",
    "babel-plugin-react-compiler": "1.0.0"
  }
}
