{
  "name": "react-compiler-marker",
  "displayName": "React Compiler Marker âœ¨",
  "description": "Highlights components optimized by the React Compiler, providing visual cues to make the optimization process more transparent during development.",
  "version": "2.1.0",
  "author": "Blazej Kustra <kustrablazej@gmail.com>",
  "publisher": "blazejkustra",
  "license": "MIT",
  "keywords": [
    "react",
    "react-compiler",
    "react-components",
    "vscode-extension",
    "optimization",
    "lsp",
    "language-server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejkustra/react-compiler-marker"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onView:react-compiler-marker.reportsView"
  ],
  "main": "./dist/extension.js",
  "icon": "logo.jpeg",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "react-compiler-marker",
          "title": "React Compiler Marker",
          "icon": "media/activity-icon.svg"
        }
      ]
    },
    "views": {
      "react-compiler-marker": [
        {
          "id": "react-compiler-marker.reportsView",
          "name": "Reports",
          "contextualTitle": "React Compiler Marker"
        }
      ]
    },
    "commands": [
      {
        "command": "react-compiler-marker.activate",
        "title": "Activate Extension",
        "category": "React Compiler Marker"
      },
      {
        "command": "react-compiler-marker.deactivate",
        "title": "Deactivate Extension",
        "category": "React Compiler Marker"
      },
      {
        "command": "react-compiler-marker.checkOnce",
        "title": "Check in the current file",
        "category": "React Compiler Marker"
      },
      {
        "command": "react-compiler-marker.previewCompiled",
        "title": "Preview Compiled Output",
        "category": "React Compiler Marker"
      },
      {
        "command": "react-compiler-marker.generateReport",
        "title": "Generate Report",
        "category": "React Compiler Marker",
        "icon": "$(add)"
      },
      {
        "command": "react-compiler-marker.refreshReports",
        "title": "Refresh Reports List",
        "category": "React Compiler Marker",
        "icon": "$(refresh)"
      },
      {
        "command": "react-compiler-marker.openReport",
        "title": "Open Report",
        "category": "React Compiler Marker"
      },
      {
        "command": "react-compiler-marker.deleteReport",
        "title": "Delete Report",
        "category": "React Compiler Marker",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "react-compiler-marker.generateReport",
          "when": "view == react-compiler-marker.reportsView",
          "group": "navigation"
        },
        {
          "command": "react-compiler-marker.refreshReports",
          "when": "view == react-compiler-marker.reportsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "react-compiler-marker.deleteReport",
          "when": "view == react-compiler-marker.reportsView && viewItem == reportItem",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "react-compiler-marker.openReport",
          "when": "false"
        },
        {
          "command": "react-compiler-marker.deleteReport",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "React Compiler Marker",
      "properties": {
        "reactCompilerMarker.babelPluginPath": {
          "type": "string",
          "default": "node_modules/babel-plugin-react-compiler",
          "description": "Path to the babel-plugin-react-compiler in your project. By default it's 'node_modules/babel-plugin-react-compiler'"
        },
        "reactCompilerMarker.excludedDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            "coverage",
            ".next",
            ".turbo"
          ],
          "description": "Directories to exclude when generating reports"
        },
        "reactCompilerMarker.supportedExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".mjs",
            ".cjs"
          ],
          "description": "File extensions to include when generating reports"
        },
        "reactCompilerMarker.errorEmoji": {
          "type": "string",
          "nullable": true,
          "default": "ðŸš«",
          "description": "Emoji marker to display next to components that failed to be memoized"
        },
        "reactCompilerMarker.successEmoji": {
          "type": "string",
          "nullable": true,
          "default": "âœ¨",
          "description": "Emoji marker to display next to components that were successfully memoized"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run typecheck && npm run lint && node ../../esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node ../../esbuild.js --watch",
    "watch:tsc": "tsc -b --watch",
    "package": "npm run typecheck && npm run lint && node ../../esbuild.js --production",
    "compile-tests": "tsc -b",
    "watch-tests": "tsc -b -w",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "typecheck": "tsc -b",
    "lint": "eslint \"src/**/*.ts\" \"../../packages/server/src/**/*.ts\"",
    "test": "vscode-test",
    "publish:vscode": "vsce publish -p $VSCE_PAT",
    "publish:ovsx": "npx ovsx publish -p $OVSX_PAT"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/vscode": "^1.95.0",
    "@types/node": "20.x",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "npm-run-all2": "^8.0.4"
  }
}
